{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"resize": true},
  "data": {
    "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "vconcat": [
    {
      "title": "Olympics Athletics Medals Won by Country (1896-2016)",
      "width": 800,
      "height": 400,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "lightblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "skyblue"}
        },
        {
          "transform": [
            {
              "calculate": "'No data available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_results.csv"
                },
                "key": "Country",
                "fields": ["GrandTotal"]
              }
            },
            {"calculate": "datum.GrandTotal", "as": "TotalMedals"}
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "params": [{"name": "countrySelection", "select": {"type": "point"}}],
          "encoding": {
            "color": {
              "field": "TotalMedals",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "domain": [0, 50, 100, 200, 400, 700],
                "scheme": "greens"
              },
              "title": "Total Medals"
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "GrandTotal",
                "type": "quantitative",
                "title": "Total Medals"
              }
            ]
          }
        }
      ]
    },
    {
      "width": 700,
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_medals.csv"
            },
            "key": "Country",
            "fields": ["Medal", "Total"]
          }
        },
        {"calculate": "datum.Total", "as": "Total"},
        {"calculate": "datum.Medal == 'G'? 'Gold': datum.Medal == 'S'? 'Silver' : 'Bronze'", "as": "Medal"},
        {"filter": {"param": "countrySelection", "empty": false}}
      ],
      "mark": {"type": "bar", "cornerRadiusEnd": 4},
      "encoding": {
        "x": {
          "aggregate":"sum",
          "field": "Total",
          "type": "quantitative",
          "title": "Total Medals"
        },
        "y": {"field": "properties.NAME", "type": "nominal", "title": null},
        "color": {"field": "Medal"}
      }
    },
    {
      "width": 700,
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_results.csv"
            },
            "key": "Country",
            "fields": ["G"]
          }
        },
        {"calculate": "datum.G", "as": "Total Gold medals"},
        {"filter": {"param": "countrySelection", "empty": false}}
      ],
      "mark": {"type": "bar", "fill": "gold", "cornerRadiusEnd": 4},
      "encoding": {
        "x": {
          "field": "Total Gold medals",
          "type": "quantitative",
          "title": "Total Gold medals"
        },
        "y": {"field": "properties.NAME", "type": "nominal", "title": null}
      }
    },
    {
      "width": 700,
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_results.csv"
            },
            "key": "Country",
            "fields": ["S"]
          }
        },
        {"calculate": "datum.S", "as": "Total Silver medals"},
        {"filter": {"param": "countrySelection", "empty": false}}
      ],
      "mark": {"type": "bar", "fill": "silver", "cornerRadiusEnd": 4},
      "encoding": {
        "x": {
          "field": "Total Silver medals",
          "type": "quantitative",
          "title": "Total Silver medals"
        },
        "y": {"field": "properties.NAME", "type": "nominal", "title": null}
      }
    },
    {
      "width": 700,
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_results.csv"
            },
            "key": "Country",
            "fields": ["B"]
          }
        },
        {"calculate": "datum.B", "as": "Total Bronze medals"},
        {"filter": {"param": "countrySelection", "empty": false}}
      ],
      "mark": {"type": "bar", "fill": "sandybrown", "cornerRadiusEnd": 4},
      "encoding": {
        "x": {
          "field": "Total Bronze medals",
          "type": "quantitative",
          "title": "Total Bronze medals"
        },
        "y": {"field": "properties.NAME", "type": "nominal", "title": null}
      }
    }
  ]
}