{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Olympics Athletics Medals Won by Country",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_results.csv"
        },
        "key": "Country",
        "fields": ["GrandTotal"]
      }
    },
    {"calculate": "datum.GrandTotal+0.1", "as": "TotalMedals"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "TotalMedals",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "blues"},
      "title": "Total Medals"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "GrandTotal", "type": "quantitative", "title": "Total Medals"}
    ]
  }
}