{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Olympics Athletics Medals Won by Country (1896-2016)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
  "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/js/ne_110m_admin_0_countries.topojson",
  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
},
  "layer": [
  {
      "data": {
        "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
  {
    "data": {
      "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/js/WorldMapWithGraticules.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    "mark": {"type": "geoshape", "fill": null, "stroke": "skyblue"}
  },
  {
      "transform": [
        {
          "calculate": "'No data available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
  {
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/charmainechin/FIT3179/main/data/filtered_results.csv"
        },
        "key": "Country",
        "fields": ["GrandTotal"]
      }
    },
    {"calculate": "datum.GrandTotal", "as": "TotalMedals"}
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "TotalMedals",
      "type": "quantitative",
      "scale": {
        "type": "linear", 
        "domain": [0, 50, 100, 200, 400, 700],
        "scheme": "greens"},
      "title": "Total Medals"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "GrandTotal", "type": "quantitative", "title": "Total Medals"}
    ]
  }
  }
  ]
}